<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.intellibeacons.app.NewMapActivity">

    <TextView    android:id="@+id/desc"
        android:text="@string/register_new_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
  <LinearLayout android:layout_width="fill_parent" android:layout_marginTop="10dp" android:orientation="vertical"
                android:layout_height="fill_parent" android:layout_below="@id/desc">
    <TextView
        android:text="@string/map_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText android:id="@+id/map_label" android:layout_width="wrap_content"
              android:width="400dp" android:layout_height="wrap_content"
              android:inputType="text" android:hint="Map name"/>
    <TextView
        android:text="@string/existing_map_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText android:id="@+id/map_id" android:layout_width="wrap_content" android:width="400dp"
              android:layout_height="wrap_content"
              android:inputType="text" android:hint="Existing map id"/>
    <TextView
        android:text="@string/floor_plan_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText android:id="@+id/floor_plan_image" android:layout_width="wrap_content" android:width="400dp"
              android:layout_height="wrap_content"
              android:inputType="text|textUri" android:hint="Floor plan image url"/>
    <ImageButton android:id="@+id/camera_image" android:layout_width="fill_parent"
                 android:layout_height="wrap_content" android:src="@drawable/camera"/>
    <Button android:id="@+id/finish" android:layout_width="fill_parent" android:layout_marginTop="80dp"
                 android:layout_height="wrap_content" android:text="Finish"/>
  </LinearLayout>

</RelativeLayout>
